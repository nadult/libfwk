{
  "dependencies": [
    "zlib",
    "bzip2",
    "brotli",
    "libpng",
    "freetype",
    "ogg",
    "openal",
    "sdl",
    "vorbis",
    "shaderc-combined",
    "vulkan-headers"
  ],
  "package-caches": [
    {
      "type": "github_release",
      "platform": "windows",
      "url": "https://github.com/nadult/libfwk/releases/download/deps-windows-1/",
      "packages": [
        "zlib:1.3.1:854141dddc517af1",
        "brotli:1.1.0:7053b0db6a3d6f2a",
        "bzip2:1.0.8:9b241d13d2c2fe16",
        "freetype:2.13.3:8f81114d71109925",
        "libpng:1.6.44:6769f80c18d1391e",
        "ogg:1.3.5:ba627248ca9bd00a",
        "openal:1.22.2:664a53b70bc932f1",
        "sdl:3.2.20:13e44bb37998f54f",
        "shaderc-combined:2025.4:eddee4f144d5945a",
        "vorbis:1.3.7:13cfaa45fb57c387",
        "vulkan-headers:1.3.236.0:53b1434962d5432d"
      ]
    }
  ],
  "conan-recipes": {
    "queries": {
      "shared-win": "os=Windows and arch=x86_64 and options.shared=True",
      "static-win": "os=Windows and arch=x86_64 and options.shared=False",
      "any": ""
    },
    "packages": [
      "zlib:1.3.1:static-win",
      "bzip2:1.0.8:static-win",
      "brotli:1.1.0:static-win",
      "libpng:1.6.44:static-win",
      "freetype:2.13.3:static-win",
      "ogg:1.3.5:static-win",
      "vorbis:1.3.7:static-win",
      "openal:1.22.2:shared-win",
      "vulkan-headers:1.3.236.0:any"
    ]
  },
  "cmake-recipes": [
    {
      "package": "sdl:3.2.24",
      "github-project": "libsdl-org/SDL",
      "source-branch": "release-3.2.24",
      "source-sha1": "a8589a84226a6202831a3d49ff4edda4acab9acd",
      "cmake-options": {
        "SDL_SHARED": "off",
        "SDL_STATIC": "on"
      },
      "install-files": [
        "include/.*",
        "lib/SDL3-static.lib:lib/SDL3.lib",
        "licenses/SDL3/LICENSE.txt:lib/SDL3-license.txt"
      ]
    },
    {
      "package": "assimp:6.0.2",
      "github-project": "assimp/assimp",
      "source-branch": "v6.0.2",
      "source-sha1": "fb375dd8c0a032106a2122815fb18dffe0283721",
      "cmake-options": {
        "BUILD_SHARED_LIBS": "off",
        "ASSIMP_BUILD_TESTS": "off",
        "ASSIMP_INSTALL_PDB": "off"
      },
      "install-files": [
        "include/.*",
        "lib/assimp-vc143-mt.lib:lib/assimp.lib"
      ]
    },
    {
      "package": "shaderc-combined:2025.4",
      "github-project": "google/shaderc",
      "source-branch": "v2025.4",
      "source-sha1": "73743588fe9c39f2f1c780a087d94afac691a189",
      "source-patches": [
        "extern/patches/shaderc-combined.patch"
      ],
      "after-checkout-commands": [
        "python ./utils/git-sync-deps"
      ],
      "cmake-options": {
        "SHADERC_SKIP_TESTS": "on",
        "SHADERC_SKIP_EXAMPLES": "on",
        "SHADERC_SKIP_EXECUTABLES": "on",
        "SHADERC_ONLY_COMBINED": "on",
        "SHADERC_ENABLE_SHARED_CRT": "on",
        "SKIP_SPIRV_TOOLS_INSTALL": "on",
        "SPIRV_SKIP_EXECUTABLES": "on",
        "SPIRV_SKIP_TESTS": "on",
        "SPIRV_TOOLS_BUILD_STATIC": "on",
        "BUILD_SHARED_LIBS": "off",
        "ENABLE_GLSLANG_BINARIES": "off"
      },
      "builds": {
        "windows:release:md": {
          "install-files": [
            "include/.*",
            "lib/shaderc_combined.lib:lib/shaderc-combined-md.lib"
          ]
        },
        "windows:release:mdd": {
          "cmake-options": {
            "SHADERC_ENABLE_SHARED_DEBUG_CRT": "on"
          },
          "install-files": [
            "include/.*",
            "lib/shaderc_combined.lib:lib/shaderc-combined-mdd.lib"
          ]
        }
      }
    }
  ]
}